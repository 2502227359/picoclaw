{
  "agents": {
    "defaults": {
      "workspace": "~/.picoclaw/workspace",
      "restrict_to_workspace": true,
      "model": "glm-4.7",
      "max_tokens": 8192,
      "temperature": 0.7,
      "max_tool_iterations": 20
    }
  },
  "channels": {
    "telegram": {
      "enabled": false,
      "token": "YOUR_TELEGRAM_BOT_TOKEN",
      "proxy": "",
      "allow_from": ["YOUR_USER_ID"]
    },
    "discord": {
      "enabled": false,
      "token": "YOUR_DISCORD_BOT_TOKEN",
      "allow_from": []
    },
    "maixcam": {
      "enabled": false,
      "host": "0.0.0.0",
      "port": 18790,
      "allow_from": []
    },
    "whatsapp": {
      "enabled": false,
      "bridge_url": "ws://localhost:3001",
      "allow_from": []
    },
    "feishu": {
      "enabled": false,
      "app_id": "",
      "app_secret": "",
      "encrypt_key": "",
      "verification_token": "",
      "allow_from": []
    },
    "dingtalk": {
      "enabled": false,
      "client_id": "YOUR_CLIENT_ID",
      "client_secret": "YOUR_CLIENT_SECRET",
      "allow_from": []
    },
    "slack": {
      "enabled": false,
      "bot_token": "xoxb-YOUR-BOT-TOKEN",
      "app_token": "xapp-YOUR-APP-TOKEN",
      "allow_from": []
    },
    "line": {
      "enabled": false,
      "channel_secret": "YOUR_LINE_CHANNEL_SECRET",
      "channel_access_token": "YOUR_LINE_CHANNEL_ACCESS_TOKEN",
      "webhook_host": "0.0.0.0",
      "webhook_port": 18791,
      "webhook_path": "/webhook/line",
      "allow_from": []
    },
    "onebot": {
      "enabled": false,
      "ws_url": "ws://127.0.0.1:3001",
      "access_token": "",
      "reconnect_interval": 5,
      "group_trigger_prefix": [],
      "allow_from": []
    }
  },
  "providers": {
    "anthropic": {
      "api_key": "",
      "api_base": ""
    },
    "openai": {
      "api_key": "",
      "api_base": ""
    },
    "openrouter": {
      "api_key": "sk-or-v1-xxx",
      "api_base": ""
    },
    "groq": {
      "api_key": "gsk_xxx",
      "api_base": ""
    },
    "zhipu": {
      "api_key": "YOUR_ZHIPU_API_KEY",
      "api_base": ""
    },
    "gemini": {
      "api_key": "",
      "api_base": ""
    },
    "vllm": {
      "api_key": "",
      "api_base": ""
    },
    "nvidia": {
      "api_key": "nvapi-xxx",
      "api_base": "",
      "proxy": "http://127.0.0.1:7890"
    },
    "moonshot": {
      "api_key": "sk-xxx",
      "api_base": ""
    },
    "ollama": {
      "api_key": "",
      "api_base": "http://localhost:11434/v1"
    }
  },
  "tools": {
    "web": {
      "search": {
        "api_key": "YOUR_BRAVE_API_KEY",
        "max_results": 5
      }
    }
  },
  "rag": {
    "enabled": false,
    "vault_path": "/vault",
    "chunk_size": 800,
    "chunk_overlap": 120,
    "top_k": 6,
    "min_similarity": 0.25,
    "snippet_max_chars": 1200,
    "include_patterns": [],
    "exclude_patterns": [".obsidian/**", ".trash/**"],
    "answer_with_sources": true,
    "fallback_to_llm": false,
    "trigger": {
      "auto": true,
      "force_prefixes": ["笔记:", "笔记："],
      "skip_prefixes": ["不查:", "不查："],
      "auto_keywords": [
        "诊断", "鉴别", "治疗", "用药", "剂量", "不良反应", "适应症", "禁忌",
        "指南", "病例", "症状", "体征", "检查", "影像", "化验", "血常规", "生化",
        "CT", "MRI", "超声", "心电图", "预后", "并发症",
        "diagnosis", "differential", "treatment", "dose", "contraindication",
        "symptom", "sign", "lab", "imaging", "prognosis"
      ]
    },
    "embedding": {
      "api_key": "YOUR_EMBEDDING_API_KEY",
      "api_base": "https://api.example.com/v1",
      "model": "your-embedding-model",
      "dimension": 0,
      "batch_size": 16,
      "timeout_seconds": 60
    },
    "vector_db": {
      "url": "http://qdrant:6333",
      "collection": "picoclaw_notes",
      "timeout_seconds": 30
    },
    "auto_index": {
      "enabled": false,
      "interval_hours": 12
    }
  },
  "heartbeat": {
    "enabled": true,
    "interval": 30
  },
  "devices": {
    "enabled": false,
    "monitor_usb": true
  },
  "gateway": {
    "host": "0.0.0.0",
    "port": 18790
  }
}
